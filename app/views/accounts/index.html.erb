<h1>案件一覧</h1>

<div>
<%= link_to '新規作成', new_account_path, class: "btn btn-mini btn-danger pull-right",:style=>"margin-bottom:10px;" %>
<%= page_entries_info @account %></div>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>案件名</th>
      <th>運用担当</th>
      <th>広告費担当</th>
      <th>請求担当</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @account.each do |account| %>
      <tr>
        <td><%= link_to account.name, account %></td>
        <td>a</td>
        <td>b</td>
        <td>c</td>
        <td><%= link_to account.name, account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop', new_account_path %>


<!-- 追加箇所開始 -->
<%= paginate @account %>
